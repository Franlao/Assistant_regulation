# Exemple de configuration d'environnement pour Railway
# Copiez ce fichier vers .env et configurez vos valeurs

# === Configuration Streamlit ===
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=false
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
STREAMLIT_GLOBAL_DEVELOPMENT_MODE=false

# === Configuration LLM ===
# Ollama (local - non recommandé pour production)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Mistral AI (recommandé pour production)
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_MODEL=mistral-large-latest

# === Configuration Base de Données ===
# ChromaDB configuration
CHROMA_DB_PATH=./chroma_db
CHROMA_HOST=localhost
CHROMA_PORT=8000

# === Configuration Authentification ===
# Clé secrète pour les sessions (générez une clé forte)
SECRET_KEY=your_secret_session_key_here

# Utilisateurs administrateurs (séparés par des virgules)
ADMIN_USERS=admin@example.com,user@example.com

# === Configuration Cache ===
JOBLIB_CACHE_DIR=./joblib_cache
ENABLE_CACHE=true
CACHE_TTL=3600

# === Configuration Logs ===
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# === Configuration RAG ===
RAG_CONFIDENCE_THRESHOLD=0.7
RAG_MAX_RESULTS=10
RAG_USE_RERANKER=false
RAG_FORCE_RAG_KEYWORDS=réglementation,norme,exigence

# === Configuration API Externe ===
# Jina Reranker (optionnel)
JINA_API_KEY=your_jina_api_key_here

# === Configuration Mémoire ===
CONVERSATION_MEMORY_ENABLED=true
CONVERSATION_WINDOW_SIZE=10
MEMORY_STORAGE_PATH=./.conversation_memory

# === Configuration Monitoring ===
ENABLE_PERFORMANCE_MONITORING=true
MONITORING_INTERVAL=30

# === Configuration Upload ===
MAX_UPLOAD_SIZE=200
ALLOWED_EXTENSIONS=pdf
TEMP_UPLOAD_DIR=./temp_uploads